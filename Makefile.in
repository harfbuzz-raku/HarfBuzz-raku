SRC=src
DocProj=pdf-raku.github.io
DocRepo=https://github.com/pdf-raku/$(DocProj)
DocLinker=../$(DocProj)/etc/resolve-links.raku

all : lib

# 'all', with compilation warnings and debug symbols enabled
debug :
	%MAKE% "CF=-Wall -g"  all

lib : resources/libraries/%LIB-NAME%

resources/libraries/%LIB-NAME% : $(SRC)/hb_bind_subset%O%
	%LD% %LDSHARED% %LDFLAGS% %LDOUT%resources/libraries/%LIB-NAME% $(SRC)/hb_bind_subset%O%

$(SRC)/hb_bind_subset%O% : $(SRC)/hb_bind_subset.c $(SRC)/hb_bind_subset.h
	%CC% -I $(SRC) -c %CCSHARED% %CCFLAGS% %CCOUT%$(SRC)/hb_bind_subset%O% $(SRC)/hb_bind_subset.c %LIB-CFLAGS% $(CF)

docs/index.md : README.md
	cp $< $@

docs/%.md : lib/%.rakumod
	raku -I . --doc=Markdown $< \
	| TRAIL=$* raku -p -n  $(DocLinker) \
        > $@

$(DocLinker) :
	(cd .. && git clone $(DocRepo) $(DocProj))

doc : $(DocLinker) docs/index.md docs/HarfBuzz.md

docs/HarfBuzz.md : lib/HarfBuzz.rakumod

test : all
	@prove -e"raku -I ." t

loudtest : all
	@prove -e"raku -I ." -v t

clean :
	@rm -f $(SRC)/ft6_*%O% resources/libraries/*%LIB-NAME%

realclean : clean
	@rm -f Makefile README.md docs/*.md docs/HarfBuzz/*.md


