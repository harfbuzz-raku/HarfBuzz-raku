SRC=src
DocProj=pdf-raku.github.io
DocRepo=https://github.com/pdf-raku/$(DocProj)
DocLinker=../$(DocProj)/etc/resolve-links.raku

all :

docs/index.md : README.md
	cp $< $@

docs/%.md : lib/%.rakumod
	raku -I . --doc=Markdown $< \
	| TRAIL=$* raku -p -n  $(DocLinker) \
        > $@

$(DocLinker) :
	(cd .. && git clone $(DocRepo) $(DocProj))

doc : $(DocLinker) docs/index.md docs/HarfBuzz.md docs/HarfBuzz/Buffer.md docs/HarfBuzz/Font.md docs/HarfBuzz/Font/FreeType.md docs/HarfBuzz/Shaper.md

docs/HarfBuzz.md : lib/HarfBuzz.rakumod

docs/HarfBuzz/Shaper.md : lib/HarfBuzz/Shaper.rakumod

docs/HarfBuzz/Buffer.md : lib/HarfBuzz/Buffer.rakumod

docs/HarfBuzz/Font.md : lib/HarfBuzz/Font.rakumod

docs/HarfBuzz/Font/FreeType.md : lib/HarfBuzz/Font/FreeType.rakumod

docs/HarfBuzz/Shaper.md : lib/HarfBuzz/Shaper.rakumod

test : all
	@prove -e"raku -I ." t

loudtest : all
	@prove -e"raku -I ." -v t

clean :
	@rm -f $(SRC)/ft6_*%O%

realclean : clean
	@rm -f Makefile README.md docs/*.md docs/HarfBuzz/*.md


